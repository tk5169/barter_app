<%# app/views/items/confirm_destroy.html.erb %>
<% content_for :title, "Delete Item?" %>

<div class="max-w-md mx-auto p-6 bg-white rounded shadow">
  <h1 class="text-2xl font-bold mb-4">本当にこのアイテムを削除しますか？</h1>
  <p class="mb-6"><strong>Title:</strong> <%= @item.title %></p>

  <div class="flex space-x-4">
    <%= button_to "はい、削除する", item_path(@item),
                  method: :delete,
                  class: "px-4 py-2 bg-red-600 text-white rounded" %>
    <%= link_to "いいえ、戻る", edit_item_path(@item),
                class: "px-4 py-2 bg-gray-300 text-gray-800 rounded" %>
  </div>
</div>
