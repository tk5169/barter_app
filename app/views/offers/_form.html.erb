<%= form_with(model: offer, class: "contents") do |form| %>
  <% if offer.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul class="list-disc ml-6">
        <% offer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :item_id %>
    <%= form.text_field :item_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": offer.errors[:item_id].none?, "border-red-400 focus:outline-red-600": offer.errors[:item_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :offered_by_id %>
    <%= form.number_field :offered_by_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": offer.errors[:offered_by_id].none?, "border-red-400 focus:outline-red-600": offer.errors[:offered_by_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :offered_item_text %>
    <%= form.textarea :offered_item_text, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": offer.errors[:offered_item_text].none?, "border-red-400 focus:outline-red-600": offer.errors[:offered_item_text].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": offer.errors[:status].none?, "border-red-400 focus:outline-red-600": offer.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :accepted_at %>
    <%= form.datetime_field :accepted_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": offer.errors[:accepted_at].none?, "border-red-400 focus:outline-red-600": offer.errors[:accepted_at].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
